<?xml version="1.0" encoding="utf-8"?>

<!-- Inflated into a LinearLayout -->
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/maneuver_indicator"
        android:text="@string/left_turn_arrow"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_height="@dimen/maneuver_approach_block_size"
        android:layout_width="@dimen/maneuver_approach_block_size"
        android:gravity="center" />

    <LinearLayout
        android:id="@+id/bar_background"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:weightSum="1"
        android:background="@color/maneuverApproachBarBackground">

        <View
            android:id="@+id/bar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5" />

    </LinearLayout>

</merge>
