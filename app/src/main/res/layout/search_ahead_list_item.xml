<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="50dp">

    <ImageView
        android:id="@+id/autocomplete_category_sym"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="8dp"
        android:src="@drawable/ic_search_black_24dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/autocomplete_category_sym"
        android:layout_toEndOf="@id/autocomplete_category_sym"
        android:orientation="vertical"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/autocomplete_primary_text"
            style="@style/MQText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="start|center_vertical"
            android:maxLines="1"
            android:paddingTop="4dp"
            android:textSize="@dimen/search_ahead_list_item_icon_primary_text_size" />

        <TextView
            android:id="@+id/autocomplete_secondary_text"
            style="@style/MQText"
            android:layout_width="match_parent"
            android:gravity="start|center_vertical"
            android:maxLines="1"
            android:paddingBottom="4dp"
            android:textColor="#777"
            android:textSize="@dimen/search_ahead_list_item_icon_secondary_text_size"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>